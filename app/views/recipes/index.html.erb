<p style="color: green"><%= notice %></p>

<h1 class="text-3xl font-bold mb-6 text-center">Receitas do CulinaryQuest</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @recipes.each do |recipe| %>
    <div class="bg-white rounded-lg shadow-lg p-4 flex flex-col items-center">
      <% if recipe.image.attached? %>
        <%= image_tag recipe.image, class: "w-full h-48 object-cover rounded mb-4" %>
      <% end %>
      <h2 class="text-xl font-semibold mb-2"><%= recipe.name %></h2>
      <p class="mb-2 text-gray-600"><%= truncate(recipe.description, length: 80) %></p>
      <span class="inline-block bg-blue-200 text-blue-800 px-3 py-1 rounded-full text-xs mb-2">
        Dificuldade: <%= recipe.difficulty %>
      </span>
      <span class="inline-block bg-green-200 text-green-800 px-3 py-1 rounded-full text-xs mb-2">
        Tempo: <%= recipe.cook_time %> min
      </span>
      <%= link_to "Jogar esta receita", recipe_path(recipe), class: "mt-2 px-4 py-2 bg-yellow-400 hover:bg-yellow-500 text-white font-bold rounded transition" %>
    </div>
  <% end %>
</div>
